    {% extends 'default_frame.twig' %}
    
    {% set body_class = 'mypage' %}
    
    {% block stylesheet %}
        <style>
            #page_mypage_login {
                background-color: #000;
                background-repeat: no-repeat;
            }

            #page_mypage_login::before {
                content: '';
                display: block;
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                height: 100vh;
                z-index: -1;
                opacity: 0.5;
                background:url('http://bon-deli.com/html/user_data/assets/img/banner1-pc.png') no-repeat center center;
                background-size: cover;
            }

            .ec-role {
                margin: 150px auto 0;
                color: white;
            }

            .ec-layoutRole {
                background:none;
            }

            .ec-login {
                padding:30px 5% 60px;
                background: none;
                font-family: "Yu Mincho";
                background: rgba(255, 255, 255, 0.1);
                border-radius: 10px;
            }

            .login-header h2 {
                font-family: "Yu Mincho";
                font-weight: 600;
                font-size: 28px;
                text-align: center;
                color: #fff;
                margin: 50px 0 40px;

            }

            .ec-login .ec-login__input {
                margin-bottom: 20px;
            }

            .ec-input input {
                color: white;
                background: transparent;
                border-radius: 10px;
            }

            .ec-input input#login_email {
                margin-bottom: 35px;
            }

            .ec-off2Grid .ec-off2Grid__cell {
                width: 40%;
                margin: auto;
            }

            .ec-grid2 {
                display: block;
            }

            .ec-grid2 .ec-grid2__cell {
                width: 100%;
            }

            .ec-blockBtn--cancel {
                background-color: #812f10!important;
                border: none;
                border-radius: 5px;
                height: 40px;
                line-height: 40px;
            }

            .ec-blockBtn--cancel:hover, .ec-blockBtn--cancel:focus {
                background-color: #812f10!important;
                border: none;
                outline: none!important;
            }

            .ec-login .ec-login__link {
                margin-top: 20px;
                margin-left: 0;
            }

            .ec-link {
                color: white;
            }

            .ec-link:hover {
                color: white;
                border: none;
            }
        @media only screen and (max-width: 767px) {
            .ec-off2Grid .ec-off2Grid__cell {
                width: 100%;
            }
            
            .ec-role {
                margin-top: 30vw;
            }
        }
                
        </style>
    {% endblock %}
    {% block main %}
        <div class="ec-role">
            <div class="ec-off2Grid">
                <div class="ec-off2Grid__cell">
                    <form name="login_mypage" id="login_mypage" method="post" action="{{ url('mypage_login') }}">
                        {% if app.session.flashBag.has('eccube.login.target.path') %}
                            {% for targetPath in app.session.flashBag.peek('eccube.login.target.path') %}
                                <input type="hidden" name="_target_path" value="{{ targetPath }}" />
                            {% endfor %}
                        {% endif %}
                        <div class="ec-login">
                            <div class="login-header">
                                <h2>ログイン</h2>
                            </div>
                            <div class="ec-login__input">
                                <div class="ec-input">
                                    {{ form_widget(form.login_email, {'attr': {'style' : 'ime-mode: disabled;', 'placeholder' : 'メールアドレス (必須)', 'autofocus': true}}) }}
                                    {{ form_widget(form.login_pass,  {'attr': {'placeholder' : 'パスワード (必須, 8文字以上)' }}) }}
                                </div>
                                {% if BaseInfo.option_remember_me %}
                                <div class="ec-checkbox">
                                    <label>
                                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                            <input type="hidden" name="login_memory" value="1">
                                        {% else %}
                                            {{ form_widget(form.login_memory, { 'label': '次回から自動的にログインする'|trans }) }}
                                        {% endif %}
                                    </label>
                                </div>
                                {% endif %}
                                {% for reset_complete in app.session.flashbag.get('password_reset_complete') %}
                                    <p>{{ reset_complete|trans }}</p>
                                {% endfor %}
                                {% if error %}
                                    <p class="ec-errorMessage">{{ error.messageKey|trans(error.messageData, 'validators')|nl2br }}</p>
                                {% endif %}
                            </div>
                            <div class="ec-grid2">
                                <div class="ec-grid2__cell">
                                    <div class="ec-login__actions">
                                        <button type="submit"
                                                class="ec-blockBtn--cancel">{{ 'ログイン'|trans }}</button>
                                    </div>
                                </div>
                                <div class="ec-grid2__cell">
                                    <div class="ec-login__link"><a class="ec-link"
                                                                   href="{{ url('forgot') }}">{{ 'ログイン情報をお忘れですか？'|trans }}</a>
                                    </div>
                                    <!-- <div class="ec-login__link"><a class="ec-link"
                                                                   href="{{ url('entry') }}">{{ '新規会員登録'|trans }}</a>
                                    </div> -->
                                </div>
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </form>
                </div>
            </div>
        </div>
    {% endblock %}