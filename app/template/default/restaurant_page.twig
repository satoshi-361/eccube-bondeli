                        <i class="fa fa-cloud-upload fa-3x text-ec-lightGray mx-3 align-middle" aria-hidden="true"></i> {{ 'admin.common.drag_and_drop_image_description'|trans }} {{ form_widget(item.product_image, { attr : { accept
                        : 'image/*', style : 'display:none;' } }) }} {{ form_errors(item.product_image) }}
                        <a class="btn btn-ec-regular mr-2 product_image_link">
                            {{ 'admin.common.file_select'|trans }}
                        </a>
                    </div>
                    <!-- /.media-body -->
                </div>
