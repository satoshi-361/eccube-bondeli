        {# <div class="row">
            <div class="col-3">
                <div class="d-inline-block">
                    <span>配達可能日</span>
                    <span class="badge badge-primary ml-1">
                        {{ 'admin.common.required'|trans }}
                    </span>
                </div>
            </div>
            <div class="col mb-2">
                {{ form_widget(item.orderable_date) }} 
                {{ form_errors(item.orderable_date) }}
            </div>
        </div> #}
        <div class="row">
            <div class="col-3">
                <div class="d-inline-block">
                    <span>オプション</span>
                </div>
            </div>
            <div class="col mb-2">
                {{ form_widget(item.dressing, { attr : { 'data-role' : 'tagsinput', 'class' : 'dressing' } }) }} 
