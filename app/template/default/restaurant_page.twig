{% import _self as formMacros %}
{% macro printProduct(item, TopCategories) %}
    <div style="border: 1px solid #ddd; margin: 10px 0; padding: 10px;">
        <div style="display:flex; align-items:center; position: absolute; right: 35px">
            <div style="margin-right: 15px">
                {{ form_widget(item.is_visible) }}
                {{ form_errors(item.is_visible) }}
            </div>
            <button type="button" class="btn btn-ec-regular remove_product">削除</button>
        </div>
        <div class="row upload-zone-product mt-5">
            <div class="col-3">
                <div class="d-inline-block" data-tooltip="true" data-placement="top" title="{{ 'tooltip.product.image'|trans }}">
                    <span>料理画像</span>
                    <i class="fa fa-question-circle fa-lg ml-1"></i>
                </div>
            </div>
            <div class="col mb-2">
                <div class="progress" style="display: none;">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <div class="thumb_product c-form__fileUploadThumbnails clearfix">
                    {{ form_widget(item.food_image, { attr : { style : "display: none", class: 'food_image'} }) }}
                </div>
                <p id="message"></p>
                <div class="media py-5 border-ec-dashed mb-2 rounded">
