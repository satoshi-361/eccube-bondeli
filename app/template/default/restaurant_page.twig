                    <input type='number' id='config_products_{{item.vars.name}}_id' name='config[products][{{item.vars.name}}][id]' value={{ item.vars.value.id }} style='display: none'>
                {% else %}
                    <input type='number' id='config_products_{{item.vars.name}}_id' name='config[products][{{item.vars.name}}][id]' value=0 style='display: none'>
                {% endif %}
                {{ form_widget(item.name) }} 
                {{ form_errors(item.name) }}
            </div>
        </div>
        <div class="row">
        <div class="col-3">
            <div class="d-inline-block">
                <span>料理のジャンル</span>
                <span class="badge badge-primary ml-1">
                    {{ 'admin.common.required'|trans }}
                </span>
            </div>
        </div>
        <div class="col mb-2">
            {# <div class="select-list">
                <div class="title">料理のジャンル設定</div>
                <div class="select-options">
                    {% for Category in TopCategories %}
                        <div class="option"> 
                            <input type="checkbox" value="{{ Category.id }}" />
                            <label>
                                {{ Category.name }}
