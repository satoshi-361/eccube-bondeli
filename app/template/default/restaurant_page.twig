        <div class="row">
            <div class="col-3">
                <div class="d-inline-block">
                    <span>{{ 'admin.product.sale_price'|trans }}（税抜）</span>
                    <span class="badge badge-primary ml-1">
                        {{ 'admin.common.required'|trans }}
                    </span>
                </div>
            </div>
            <div class="col mb-2">
                <div>
                    {{ form_widget(item.visible_price) }}
                    {{ form_errors(item.visible_price) }}
