{% extends 'default_frame.twig' %}

{% set body_class = 'cart_page' %}

{% block main %}

<div class="ec-role">
    <div class="ec-pageHeader">
        <h1>{{ '購入エラー'|trans }}</h1>
        {% set strings = message | split(';') %}
        {% for string in strings %}
          <p style="text-align: center">{{ string }}</p>
        {% endfor %}
    </div>
</div>

<!-- アラートメッセージ -->
{{ include('Shopping/alert.twig', { 'error_only': true }) }}

<div class="ec-role">
    <div class="ec-off3Grid">
        <div class="ec-off3Grid__cell">
            <div class="ec-off4Grid">
                <div class="ec-off4Grid__cell">
                    {% if message == '' %}
                    <a class="ec-blockBtn--cancel" href="{{ url('cart') }}">{{ 'カートに戻る'|trans }}</a>
                    {% else %}
                    <a class="ec-blockBtn--cancel" href="{{ url('homepage') }}">{{ '戻る'|trans }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}